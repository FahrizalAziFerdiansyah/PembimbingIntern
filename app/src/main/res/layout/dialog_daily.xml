<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Lembar Kegiatan Mahasiswa"
        android:padding="10dp"
        android:textSize="20sp"
        android:id="@+id/bahasan"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Kegiatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@string/appbar_scrolling_view_behavior"
            android:id="@+id/kegiatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Catatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:fontFamily="@string/appbar_scrolling_view_behavior"
            android:id="@+id/catatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="TTD Pendamping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/ttd"
            android:layout_width="match_parent"
            android:layout_height="100sp"/>
        <TextView
            android:id="@+id/belum"
            android:fontFamily="@string/appbar_scrolling_view_behavior"
            android:layout_width="wrap_content"
            android:text="Belum Diperiksa"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white"
            android:background="#e74c3c"
            android:text="Tutup"
            android:textAllCaps="false"
            android:layout_gravity="right"
            android:id="@+id/tutup"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/txtStat"
            android:fontFamily="@string/appbar_scrolling_view_behavior"
            android:layout_width="wrap_content"
            android:text="Belum Diperiksa"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>